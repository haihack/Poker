<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewHandChecking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".presentation.main.MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/btnAddHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/dimen_50px"
                android:textSize="15sp"
                android:textColor="@color/primary"
                android:text="@string/fragment_hand_checking_item_をadd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:text="@string/fragment_hand_checking_値を入力してください" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/bg_round_primary_color"
                android:layout_marginVertical="@dimen/dimen_30dp"
                android:textColor="@android:color/white"
                android:text="@string/fragment_hand_checking_results_を_obtained" />


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
